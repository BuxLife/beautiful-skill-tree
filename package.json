{
  "name": "beautiful-skill-tree",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/skill-tree-package.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "styles.css"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "test:watch": "tsdx test --env=jsdom --watchAll"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ],
    "moduleNameMapper": {
      ".*\\.(css)$": "<rootDir>src/components/__mocks__/styleMock.ts"
    },
    "testMatch": [
      "<rootDir>src/**/__tests__/*.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.4",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.136",
    "@types/uuid": "^3.4.5",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tsdx": "^0.7.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "jest-dom": "^3.5.0",
    "lodash": "^4.17.14",
    "uuid": "^3.3.2"
  }
}
